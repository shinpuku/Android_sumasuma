<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:fillViewport="true"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/b_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/b_image1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/code_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#ffffff"
                android:paddingLeft="6dp"
                android:paddingTop="40dp"
                 />

            <TextView
                android:id="@+id/w_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom ="20dp"
                android:text="バーコードリーダーにかざしてください"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/frame"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="ポイント残高"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/point_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#208020"
                android:gravity="right|center"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/text_ex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/point_warning"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/b_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/b_image3" />
    </LinearLayout>

</ScrollView>